rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Receipt images: receipts/{expenseId}/{imageId}.jpg
    // Only authenticated users can upload/read their own receipt images
    match /receipts/{expenseId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
